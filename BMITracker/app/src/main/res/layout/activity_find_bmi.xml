<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindBMI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="420sp"
            android:layout_height="260sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bmi_pic"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="8sp"
            android:text="Enter Weight (KG): "
            android:layout_below="@id/img1"
            android:textSize="30sp"
            android:textColor="@color/colorText1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="3sp"
            android:textSize="30sp"
            android:textColor="@color/colorText3"
            android:textStyle="italic"
            android:layout_toRightOf="@id/tv1"
            android:layout_alignBaseline="@id/tv1"
            android:hint=" i.e. 65"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_marginLeft="8sp"
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:textSize="30sp"
            android:textColor="@color/colorText1"
            android:text="Enter Age: "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorText3"
            android:layout_marginLeft="5sp"
            android:textStyle="italic"
            android:layout_below="@id/et1"
            android:layout_toRightOf="@id/tv2"
            android:layout_alignBaseline="@id/tv2"
            android:hint=" i.e. 25"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_marginLeft="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_below="@+id/tv2"
            android:textSize="30sp"
            android:textColor="@color/colorText1"
            android:text="Enter Height:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/tv3"
            android:textSize="30sp"
            android:textColor="@color/colorText1"
            android:text="Feet:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorText3"
            android:layout_marginLeft="5sp"
            android:textStyle="italic"
            android:layout_below="@id/et1"
            android:layout_toRightOf="@id/tv4"
            android:layout_alignBaseline="@id/tv4"
            android:hint=" i.e. 5"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/et3"
            android:layout_marginLeft="7sp"
            android:layout_toRightOf="@id/et3"
            android:textSize="30sp"
            android:textColor="@color/colorText1"
            android:text="Inches:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5sp"
            android:textSize="30sp"
            android:textColor="@color/colorText3"
            android:textStyle="italic"
            android:layout_toRightOf="@id/tv5"
            android:layout_alignBaseline="@id/tv5"
            android:hint=" i.e. 10"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/b"
            android:layout_width="250sp"
            android:layout_marginTop="55sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv4"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"
            android:textColor="@color/colorText2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="25sp"/>

    </RelativeLayout>

</ScrollView>